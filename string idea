#include <iostream>
#include <string>

int main() {
    std::string secretWord = "HELLO";
    std::string guess;
    
    // Loop until the guess is correct
    while (true) {
        std::cout << "Enter your guess: ";
        std::cin >> guess;
        
        // Check the guess against the secret word
        std::string feedback;
        for (int i = 0; i < secretWord.length(); ++i) {
            if (guess[i] == secretWord[i]) {
                feedback += "G";
            } else {
                feedback += "_"; // Or any other symbol to represent incorrect position
            }
        }
        
        std::cout << "Feedback: " << feedback << std::endl;
        
        // Check if the guess is correct
        if (feedback == "GGGGG") {
            std::cout << "Congratulations! You guessed the word!" << std::endl;
            break; // Exit the loop
        }
    }
    
    return 0;
}
